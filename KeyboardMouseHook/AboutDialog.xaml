<Window
	x:Class="SimpleKeyboardMouseHook.AboutDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:SimpleKeyboardMouseHook"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Width="390"
	Height="160"
	ResizeMode="NoResize"
	ShowInTaskbar="True"
	Topmost="False"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Image
			Grid.RowSpan="2"
			Width="80"
			Height="80"
			Margin="10,10"
			VerticalAlignment="Top"
			Source="/AppIcon.png"/>

		<TextBlock
			Grid.Column="1"
			Margin="0,4"
			FontSize="18"
			Text="Simple Keyboard Mouse Hook"/>

		<StackPanel
			Grid.Row="1"
			Grid.Column="1"
			Margin="0,4"
			VerticalAlignment="Top">
			<TextBlock x:Name="VersionText"
				d:Text="v1.0"
				Margin="0,-10,0,0"
				FontSize="16"/>
			<Border Height="4"/>
			<TextBlock FontSize="14" Text="By RainbowWolfer (R.Wolfer)"/>
			<TextBlock>
				<Hyperlink NavigateUri="https://github.com/RainbowWolfer/SimpleKeyboardMouseHook" RequestNavigate="Hyperlink_RequestNavigate">Github</Hyperlink>
			</TextBlock>
			<Border Height="4"/>
			<TextBlock x:Name="FrameworkText" d:Text="Using DotNet 100" FontSize="12"/>
		</StackPanel>
	</Grid>

</Window>
