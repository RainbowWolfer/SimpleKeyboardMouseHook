<Window
	x:Class="KeyboardMouseHook.AboutDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:KeyboardMouseHook"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Width="330"
	Height="120"
	ResizeMode="NoResize"
	ShowInTaskbar="True"
	Topmost="False"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Image
			Grid.RowSpan="2"
			Width="80"
			Height="80"
			Margin="10,0"
			Source="/AppIcon.png"/>

		<TextBlock
			Grid.Column="1"
			Margin="0,4"
			FontSize="18"
			Text="Keyboard Mouse Hook"/>

		<StackPanel
			Grid.Row="1"
			Grid.Column="1"
			Margin="0,4"
			VerticalAlignment="Top">
			<TextBlock FontSize="14" Text="By RainbowWolfer"/>
			<TextBlock>
				<Hyperlink NavigateUri="https://github.com/RainbowWolfer/KeyboardMouseHookDemo" RequestNavigate="Hyperlink_RequestNavigate">Github</Hyperlink>
			</TextBlock>
		</StackPanel>
	</Grid>

</Window>
